using System;

public class Calculator<T>
{
    public delegate T BinaryOperation(T a, T b);

    public BinaryOperation Add { get; set; }
    public BinaryOperation Subtract { get; set; }
    public BinaryOperation Multiply { get; set; }
    public BinaryOperation Divide { get; set; }

    public Calculator(BinaryOperation add, BinaryOperation subtract, BinaryOperation multiply, BinaryOperation divide)
    {
        Add = add;
        Subtract = subtract;
        Multiply = multiply;
        Divide = divide;
    }
}

class Program
{
    static void Main()
    {
        // Для цілочисельних типів
        Calculator<int> intCalculator = new Calculator<int>(
            (a, b) => a + b,
            (a, b) => a - b,
            (a, b) => a * b,
            (a, b) => a / b
        );

        int result1 = intCalculator.Add(5, 3);        // Результат: 8
        int result2 = intCalculator.Subtract(8, 3);   // Результат: 5
        int result3 = intCalculator.Multiply(4, 2);   // Результат: 8
        int result4 = intCalculator.Divide(10, 2);    // Результат: 5

        Console.WriteLine($"Integer calculations: {result1}, {result2}, {result3}, {result4}");

        // Для дробових чисел
        Calculator<double> doubleCalculator = new Calculator<double>(
            (a, b) => a + b,
            (a, b) => a - b,
            (a, b) => a * b,
            (a, b) => a / b
        );

        double result5 = doubleCalculator.Add(2.5, 3.5);       // Результат: 6.0
        double result6 = doubleCalculator.Subtract(8.0, 3.5);  // Результат: 4.5
        double result7 = doubleCalculator.Multiply(2.5, 2.0);  // Результат: 5.0
        double result8 = doubleCalculator.Divide(10.0, 2.0);   // Результат: 5.0

        Console.WriteLine($"Double calculations: {result5}, {result6}, {result7}, {result8}");
    }
}